# Database Configuration
DB_URL=jdbc:mysql://localhost:3306/demo_db?useUnicode=true&characterEncoding=utf-8&serverTimezone=Asia/Shanghai&useSSL=false
DB_USERNAME=root
DB_PASSWORD=your_database_password

# Database Connection Pool Configuration
DB_POOL_MIN_IDLE=10
DB_POOL_MAX_SIZE=50
DB_IDLE_TIMEOUT=600000
DB_MAX_LIFETIME=1800000
DB_CONNECTION_TIMEOUT=20000
DB_VALIDATION_TIMEOUT=5000
DB_LEAK_DETECTION=60000

# ==================== 缓存配置 ====================
# Redis缓存配置
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=your_redis_password
REDIS_DATABASE=0
REDIS_TIMEOUT=3000
REDIS_SSL=false

# Spring Cache Redis配置
SPRING_CACHE_REDIS_TIME_TO_LIVE=PT30M
SPRING_CACHE_REDIS_CACHE_NULL_VALUES=false
SPRING_CACHE_REDIS_KEY_PREFIX=app:cache:
SPRING_CACHE_REDIS_USE_KEY_PREFIX=true

# Redis Connection Pool Configuration
REDIS_POOL_MAX_ACTIVE=8
REDIS_POOL_MAX_WAIT=-1ms
REDIS_POOL_MAX_IDLE=8
REDIS_POOL_MIN_IDLE=0
REDIS_SHUTDOWN_TIMEOUT=100ms

# 日志配置
LOG_HOME=logs
APP_NAME=spark-demo
LOG_LEVEL=INFO
LOG_MAX_FILE_SIZE=10MB
LOG_MAX_HISTORY=30
LOG_TOTAL_SIZE_CAP=1GB

# 应用配置
SERVER_PORT=8080
APP_ENV=development

# 安全配置
JWT_SECRET=your_jwt_secret_key_here
SESSION_SECRET=your_session_secret_here